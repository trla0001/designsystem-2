---
const { url = "#", cardimage = "", cardimagealt = "", badgenyt = "false", badgerabat = "false", badgefaapladser = "false", holdnavn = "", tidspunkt = "", aldersgruppe = "", niveau = "", pladserpaaholdet = "", lokale = "", holdbeskrivelse = "", underviserfoto = "", underviserfotoalt = "", undervisernavn = "", underviserinfo = "" } = Astro.props;
---

<article class="border-blue-500 border-2 @container">
  <a href={url} class="flex flex-col">
    <section class="relative">
      <img src={cardimage} alt={cardimagealt} class="object-cover w-full h-9xl" />
      {
        badgenyt == "true" && (
          <div class="absolute bg-black text-white top-xs left-xs">
            <span>Nyt hold!</span>
          </div>
        )
      }
      {
        badgerabat == "true" && (
          <div class="absolute bg-black text-white top-xs right-xs">
            <span>10% rabat</span>
          </div>
        )
      }
      {
        badgefaapladser == "true" && (
          <div class="absolute bg-black text-white bottom-xs left-xs">
            <span>Kun fÃ¥ pladser tilbage!</span>
          </div>
        )
      }
    </section>
    <section class="p-xs grow border-b-2 border-blue-500">
      <h3 class="text-small @text-large font-semibold mb-xs">{holdnavn}</h3>
      <div class="flex flex-col @md:flex-row @md:justify-between mb-xs">
        <div class="grow">
          <div><span class="font-semibold">Tid: </span><span>{tidspunkt}</span></div>
          <div><span class="font-semibold">Alder: </span><span>{aldersgruppe}</span></div>
          <div><span class="font-semibold">Niveau: </span><span>{niveau}</span></div>
        </div>
        <div class="grow">
          <div><span class="font-semibold">Deltagere: </span><span>{pladserpaaholdet}</span></div>
          <div><span class="font-semibold">Lokale: </span><span>{lokale}</span></div>
        </div>
      </div>
      <p class="mb-xs">{holdbeskrivelse}</p>
    </section>
    <section class="flex my-xs gap-xs p-xs">
      <div class="flex-none"><img src={underviserfoto} alt={underviserfotoalt} class="rounded-full w-lg h-lg object-cover" /></div>
      <div class="flex-col">
        <p>{undervisernavn}</p>
        <p>{underviserinfo}</p>
      </div>
    </section>
  </a>
</article>
